<%- include common/_head.ejs %>
    <script src='/lib/rules/rules.js'></script>
</head>
<body class="snh-body index">
    <%- include common/_nav.ejs %>
    <div class="snh-container jumbotron jumbotron-fluid snh-jumbotron main-jumbotron">
        <div class="container">
                <div class="row main-jumbotron-content mt-md-5">
                    <div class="col-12 col-lg-5 main-code-editor-container">
                        <div id="main-code-editor"></div>
                    </div>
                    <div class="col-lg-2 d-none d-lg-block will-be"><i class="fa fa-hand-o-right" aria-hidden="true"></i></div>
                    <div class="col-lg-12 d-lg-none d-md-block will-be"><i class="fa fa-hand-o-down" aria-hidden="true"></i></div>
                    <div class="col-12 col-lg-5 main-timeline-container">
                        <div id="main-timeline"></div>
                    </div>
                </div>
            <hr class="m-y-md hidden-md-down">
            <div class="lead pi-buttons">
                <a class="btn btn-outline-success" href="/example" role="button"><%= t('button.usage') %></a>
                <a class="btn btn-outline-info" href="https://github.com/FoXZilla/short-night/wiki" role="button"><%= t('button.development') %></a>
            </div>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid scale-jumbotron">
        <h2 class="jumbotron-header">
            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
            <%= t('header.alignTime') %>
            <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
        </h2>
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-6 col-md-12 scale-timeline-container">
                    <div id="scale-timeline"></div>
                </div>
                <div class="col-lg-5 col-md-12 p-0">
                    <div class="scale-code-editor-container">
                        <div id="scale-code-editor"></div>
                    </div>
                    <div class="scale-description">
                        <ul>
                            <li><%= t('phrase.alignDescriptions.0') %></li>
                            <li><%= t('phrase.alignDescriptions.1') %></li>
                            <li><%= t('phrase.alignDescriptions.2') %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h2 class="jumbotron-header">
                <i class="fa fa-cubes" aria-hidden="true"></i>
                <%= t('header.autoArrange') %>
                <i class="fa fa-cubes" aria-hidden="true"></i>
            </h2>
            <div class="row conflict-jumbotron-content">
                <div class="col-md-12 col-lg-4 conflict-timeline-container">
                    <div id="has-conflict-timeline"></div>
                </div>
                <div class="col-lg-2 d-lg-block d-md-none will-be">
                    <i style="position: relative; top: -0.21em" class="fa fa-magic" aria-hidden="true"></i>
                    <i class="fa fa-angle-right fa-2x" aria-hidden="true"></i>
                </div>
                <div class="col-lg-12 d-lg-none d-md-block will-be">
                    <i style="position: relative; top: 0.5em" class="fa fa-magic" aria-hidden="true"></i><br />
                    <i class="fa fa-angle-down fa-2x" aria-hidden="true"></i>
                </div>

                <div class="col-md-12 col-lg-6 conflict-timeline-container">
                    <div id="no-conflict-timeline"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/index.js"></script>
    <% include common/_foot.ejs %>
</body>
</html>
